<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.example.awogni.carnetdenotes.MainActivity">


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="215dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtProprietaire"
        android:layout_marginTop="38dp"
        android:spinnerMode="dialog"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="26dp" />

    <Button
        android:id="@+id/nvoSemestre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtProprietaire"
        android:layout_marginTop="26dp"
        android:text="Nouveau Semestre"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="68dp" />

    <ListView
        android:id="@+id/listUE"
        android:layout_width="368dp"
        android:layout_height="198dp"
        android:layout_alignParentBottom="true"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="89dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="297dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="280dp"
        android:layout_height="25dp"
        android:layout_above="@+id/listUE"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp"
        android:background="@android:color/holo_blue_dark"
        android:text="UE"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="143dp" />

    <Button
        android:id="@+id/btnNvoUe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/listUE"
        android:layout_alignRight="@+id/listUE"
        android:text="Ajouter" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Réinitialiser" />

    <TextView
        android:id="@+id/txtProprietaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listUE"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/listUE"
        android:text="nom et prenom Propriétaire"

        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnMoyenne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnReset"
        android:layout_toStartOf="@+id/btnReset"
        android:text="Bulletin" /><![CDATA[





    140dp"
    tools:layout_editor_absoluteY="143dp" />



]]>
</RelativeLayout>
